<!-- answer form -->
<div class="col-lg-12">
  <div class="well bs-component">
    <form class="form-horizontal" {{action 'createAnswer' on="submit"}}>
      <fieldset>
        <legend>Answer...</legend>
        <div class="form-group">
          <label for="answer" class="col-lg-2 control-label">Your answer</label>
          <div class="col-lg-8">
            {{textarea rows="3" class="form-control" id="answer" value=answer placeholder="Your answer"}}
          </div>
        </div>
        <div class="form-group">
          <label for="dummy" class="col-lg-2 control-label">Name</label>
          <div class="col-lg-5">
            {{input type="text" id="dummy" class="form-control" value=dummy placeholder="Name"}}
          </div>
        </div>

        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <button class="btn btn-primary">Submit Dumb Answer</button>
          </div>
        </div>
      </fieldset>
    </form>
  </div>
</div>
<!--end of answer form -->
